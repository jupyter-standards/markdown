<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Jupyter Markdown Specification</title>
    <script type="module" src="https://unpkg.com/@jupyter/web-components@~0.13.0/dist/toolkit.min.js"></script>

    <style>
    /*
        Minimal set of CSS properties from a JupyterLab theme
        used to theme the toolkit.
    */
    :root {
        --jp-brand-color1: #f37726;
        --jp-layout-color1: #808080;
        --jp-border-width: 1px;
        --jp-ui-font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        --jp-ui-font-size1: 13px;
    }

    body {
        background-color: var(--neutral-layer-1);
        color: var(--neutral-foreground-rest);
        font-size: var(--type-ramp-base-font-size);
        line-height: var(--type-ramp-base-line-height);
        font-family: var(--body-font);
    }

    header {
      padding: 0 2rem;
      border-bottom: solid var(--neutral-color) calc(var(--stroke-width) * 1px);
    }

    h1 {
        font-size: var(--type-ramp-plus-3-font-size);
        line-height: var(--type-ramp-plus-3-line-height);
    }

    .navbar {
      width: 100%;
      display: inline-flex;
      align-items: end;
    }

    .nav-links {
        display: inline-flex;
        margin: auto 0 auto auto;

        list-style: none;

        font-size: var(--type-ramp-plus-2-font-size);
        line-height: var(--type-ramp-plus-2-line-height);
    }

    .nav-links > li {
        padding: 0 20px;
    }

    .nav-links > li > a {
        text-decoration: none;
    }
    </style>
    {% block head %}{% endblock %}
</head>

<body>
    <header>
     <nav class="navbar">
        <a class="nav-brand" href="https://jupyter.org">
            <picture>
                <source media="(max-width: 767px)" srcset="https://jupyter.org/assets/logos/logomark-orangebody-greyplanets.svg">
                <source media="(min-width: 768px)" srcset="https://jupyter.org/assets/logos/rectanglelogo-greytext-orangebody-greymoons.svg">
                <img class="navbar-logo" src="https://jupyter.org/assets/logos/rectanglelogo-greytext-orangebody-greymoons.svg" alt="Jupyter Home" loading="eager" height="40">
            </picture>
        </a>
        <ul class="nav-links">{% for heading in pages %}
        <li><a href="{{ heading[1] }}">{{ heading[0] }}</a></li>{% endfor %}
        </ul>
     </nav>
     <jp-button id="theme-mode"></jp-button>
    </header>
    {% block content %}{% endblock %}
    <script type="module">
        // Apply JupyterLab theme
        import { applyJupyterTheme } from 'https://unpkg.com/@jupyter/web-components/dist/toolkit.min.js';

        // Inject icon in theme mode button
        fetch('https://unpkg.com/@mdi/svg@7.2.96/svg/brightness-6.svg')
            .then(
                r => r.text()
            )
            .then(
                brightness6 => {
                    document.querySelector('#theme-mode').insertAdjacentHTML('afterbegin', brightness6)
                }
            );

        applyJupyterTheme();

        function switchThemeMode(th) {
            const mode = document.body.getAttribute('data-theme-mode');
            document.body.setAttribute(
                'data-theme-mode',
                mode == 'light' ? 'dark' : 'light'
            );
            document.body.style.removeProperty('--jp-layout-color1');
            document.body.style.setProperty(
                '--jp-layout-color1',
                // Apparent opposite condition as we don't update the mode variable
                mode == 'dark' ? '#808080' : 'black'
            );
            applyJupyterTheme();
        }

        document.querySelector('#theme-mode').addEventListener('click', () => {
            switchThemeMode();
        });
    </script>
    {% block footer %}{% endblock %}
</body>

</html>